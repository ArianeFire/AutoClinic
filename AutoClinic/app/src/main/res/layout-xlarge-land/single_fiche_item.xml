<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="180dp"
    android:background="@drawable/border"
    android:layout_height="170dp"
    android:layout_margin="10dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/title"
        android:layout_weight="1.5"
        android:text="Rep. BMW B55267"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="15sp"
        />

    <ImageView
        android:id="@+id/ficheImg"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_file_document_box_black_48dp"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/border_v2"
        android:paddingBottom="2dp"
        >

        <ImageView
            android:id="@+id/employ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_worker_black_24dp"
            android:layout_marginRight="@dimen/ic_marg"

            />

        <!--<ImageButton
            android:id="@+id/open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/ic_marg"
            android:src="@drawable/ic_open_in_new_black_18dp" />-->


        <ImageView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/ic_marg"
            android:src="@drawable/ic_delete_forever_black_24dp" />

        <ImageView
            android:id="@+id/archiverr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/ic_marg"
            android:src="@drawable/small_arch" />

    </LinearLayout>


</LinearLayout>